{
	"firestore": {
		"rules": "firebase.firestore.rules",
		"indexes": "firebase.firestore.indexes.json"
	},
	"hosting": {
		"public": "source/firebase_hosting",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"storage": {
		"rules": "firebase.storage.rules"
	},
	"functions": {
		"source": "source/firebase_functions"
	}
}